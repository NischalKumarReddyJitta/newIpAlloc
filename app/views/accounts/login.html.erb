<div class = "login">
<p id="notice"><%= notice %></p>

<h1>Login</h1>

<%= form_tag("/account/login", method: "post") do %>
  <p>
    <%= label_tag(:login, "Username:") %>
    <%= text_field_tag(:login) %>
  </p>
  <p>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
  </p>
   <p>
    <%= submit_tag("Log In") %>
   </p>
<% end %>
<div id="signup_msg">Not a member yet? Please <%= link_to 'Sign Up', account_signup_path %></div>

<%= link_to 'Back to Home Page',root_path %>
</div>