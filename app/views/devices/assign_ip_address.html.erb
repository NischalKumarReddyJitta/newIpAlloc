<%= form_tag("/device/assign", method: "post") do %>

    <%= label_tag(:name, "Enter Device Name:") %>
    <%= text_field_tag(:name) %>

    <%= label_tag(:ip_address, "Enter IP Address:") %>
    <%= text_field_tag(:ip_address) %> <br>

    <%= submit_tag("Assign") %>
<% end %>

<%= link_to 'Back', devices_path %>